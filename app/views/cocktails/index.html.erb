<div class="banner">
  <h1>Welcome to Discover Cocktails</h1>
</div>
<div class="search-cocktail">
  <form action="" method="get" class="form-inline d-flex justify-content-center md-form form-sm active-cyan active-cyan-2 mt-2">
    <i class="fas fa-search" aria-hidden="true"></i>
    <input class="form-control form-control-sm ml-3" style="width: 200px; margin-right: 5px;" type="text" placeholder="Search by ingredient" aria-label="Search">
  </form>
</div>
<div class="cocktail_container d-flex">
  <% @cocktails.each do |cocktail| %>
    <div class="col-sm-12 col-lg-6 my-5">
      <%= link_to cocktail do %>
        
        <div class="cocktail_card d-flex">
          <% if cocktail.photo.attached? %>
            <div class="image" style="background-image: url('<%= cl_image_path cocktail.photo.key %>');"><h1 class="cocktail_name_text"><div class="layer"><%= cocktail.name %></div></h1></div>
          <% else %>
            <div class="image" style="background-image: url('<%= asset_path 'placeholder.jpg' %>');"><h1 class="cocktail_name_text"><div class="layer"><%= cocktail.name %></div></h1></div>
          <% end %>
          <div class="content">
            <h5><%= cocktail.name %></h5>
            <% cocktail.doses.each do |dose| %>
              <div class="ingredients">
                <p><%= dose.ingredient.name %></p>
                <p><%= dose.description %></p>
              </div>
            <% end %>
          </div>
        </div>
        
      <% end %>
    </div>
  <% end %>
</div>